{
    "name": "hooshid/metacritic-scraper",
    "description": "Library for retrieving movie, game, album, tv, person, video, company, story information from metacritic.com",
    "keywords": [
        "php",
        "metacritic",
        "metacritic.com",
        "scraping",
        "scraper",
        "api",
        "parser",
        "metacritic-webscrapping",
        "metacritic-scraping",
        "metacritic-scraper",
        "metacritic-metadata"
    ],
    "homepage": "https://github.com/hooshid/metacritic-scraper",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alireza Kamali",
            "email": "arka1373@gmail.com",
            "homepage": "https://github.com/arkamali",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.3",
        "ext-curl": "*",
        "ext-json": "*",
        "voku/simple_html_dom": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Hooshid\\MetacriticScraper\\": "src"
        }
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml tests"
    }
}
